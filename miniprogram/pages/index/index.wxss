/**index.wxss**/

.text-title{
  width: 90%;
  height: 70rpx;
  margin: 0rpx auto;
  margin-top: 25rpx;
  font-size: 38rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  align-content: center;
}

/* 宫格导航 */
.shop-nav{
  background: #fff;
  width: 90%;
  height: 170rpx;
  margin: 0rpx auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
}

.shop-nav-item{
  width: 100rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 35rpx;
  color: #aaa;
}

.shop-nav-icon{
  width: 80rpx;
  height: 80rpx;
}

/* 二手上新 */
.text-title-1{
  width: 90%;
  height: 70rpx;
  margin: 0rpx auto;
  margin-top: 35rpx;
  font-size: 38rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  align-content: center;
}

/* 二手上新 */
.goods-recom{
  width: 90%;
  margin: 0rpx auto;
  margin-top: 7rpx;
}

.recom-box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow: hidden;
}

.recom-box-item{
  width: 320rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin: 30rpx auto;
  margin-top: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
}

.recom-box-img{
  width: 320rpx;
  height: 420rpx;
  overflow: hidden;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  position: relative;
}

.recom-box-item-icon{
  width: 320rpx;
  height: 420rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.recom-box-text{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 10rpx;
  margin-left: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-des{
  margin-bottom: 10rpx;
  width: 100%;
  padding: 20rpx 0rpx;
  text-align: center;
}

.goods-des2{
  overflow: hidden;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.goods-price{
  font-size: 35rpx;
  font-weight: bold;
  color: #ff3456;
  float: left;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.goods-wants{
  font-size: 28rpx;
  float: right;
  color: #aaa;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.goods-sell{
  font-size: 30rpx;
  float: right;
  color: #aaa;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  text-decoration: underline;
}

.goods-tag{
  width: 150rpx;
  border-style: solid;
  border-width: 3rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: white;
  background: linear-gradient(to right, #965d62, #c7956d);
  float: left;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
}