/* miniprogram/pages/addressAdmin/addressAdmin.wxss */

.wrapper {
  color: #000;
  width: 100vw;
  height: 100vh;
}
.text-title{
  width: 90%;
  height: 70rpx;
  margin-left: 250rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  font-size: 48rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  align-content: center;
}
.des-block{
  margin-left: 80rpx;
  overflow: hidden;
  width: 100%;
  height: 150rpx;
  text-align: left;
}

.btn {
  margin-top: 120rpx;
  width: 270rpx;
  height: 90rpx;
  background-color: black;
  color: white;
  border-radius: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}

input {
  float: left;
  margin-left: 40rpx;
  padding-left: 20rpx;
  width: 450rpx;
  height: 80rpx;
  background: #fff;
  color: #333;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
  font-size: 32rpx;
}
.name {
  float: left;
  margin-top: 15rpx;
  font-weight: bold;
  margin-left:35rpx;
}

.phone {
  float: left;
  margin-top: 15rpx;
  font-weight: bold;
  margin-left:35rpx;
}

.address {
  float: left;
  margin-top: 30rpx;
  font-weight: bold;
  margin-left:35rpx;
}