<!--post.wxml-->
<!-- 头部 -->
<view class="text-title">
  <block>
    <text>拍照上传</text>
  </block>
</view>

<button class="left-button" style="width:24vw" bindtap="doUpload">照片</button>

<view class="text-subtitle">
  <block>
    <text>写下名称</text>
  </block>
</view>

<textarea class="textarea" style="height:2em" placeholder="写下商品名称" bindinput="nameInput" value="{{name}}" />


<view class="text-subtitle">
  <block>
    <text>写下简介</text>
  </block>
</view>

<textarea class="textarea" style="height:5em" placeholder="写下该物品的简介，建议不超过500字" bindinput="descInput" value="{{description}}" />

<view class="text-subtitle">
  <block>
    <text>选择种类</text>
  </block>
</view>

<textarea class="textarea" style="height:2em" placeholder="输入种类" bindinput="tagInput" value="{{tag}}" />

<view class="text-subtitle">
  <block>
    <text>定价</text>
  </block>
</view>

<textarea class="textarea" style="height:2em" placeholder="输入你认为合适的定价，单位：人民币" bindinput="priceInput" value="{{price}}"  />

<view class="text-subtitle">
  <block>
    <text>问题</text>
  </block>
</view>
<textarea class="textarea" style="height:2em" placeholder="输入你想要进行自动回复的问题"  bindinput="questionInput" value="{{question}}"/>

<view class="text-subtitle">
  <block>
    <text>预设回复</text>
  </block>
</view>
<textarea class="textarea" style="height:2em" placeholder="输入你对该问题的预设回复"  bindinput="answerInput" value = "{{answer}}"/>

<button class="center-button" style="width:24vw" bindtap="doPost">发布</button>