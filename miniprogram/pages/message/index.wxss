/* 消息列表 */
.mess{
  width: 90%;
  margin: 0rpx auto;
  margin-top: 7rpx;
}

.mess-box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow: hidden;
  flex-direction: column;
  margin-top: 30rpx;
}

.mess-box-item{
  width: 100%;
  height: 150rpx;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin: 30rpx auto;
  margin-top: 0rpx;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
}

.mess-box-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  position: relative;
  margin-top: 25rpx;
  margin-left: 25rpx;
  float:left;
}

.mess-box-item-icon{
  width: 100rpx;
  height: 100rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.mess-name{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 25rpx;
  margin-left: 170rpx;
  float: left;
  display: -webkit-box;
  -webkit-line-clamp: 1;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
}
.mess-cont{
  font-size: 30rpx;
  color: #330;
  margin-top: 85rpx;
  margin-left: 170rpx;
  float: left;
  display: -webkit-box;
  -webkit-line-clamp: 1;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
}

.loading-wrap {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 200rpx;
}
.loading-wrap .img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 50rpx;
}
.loading-wrap .text{
  font-size: 26rpx;
  color: #999;
}

.no-data {
  font-size: 32rpx;
  color: grey;
  text-align: center;
  margin-top: -120rpx;
}